{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,  // Desativa verificações de modo estrito
    "skipLibCheck": true,  // Ignora a verificação de bibliotecas de declaração
    "forceConsistentCasingInFileNames": false,  // Desativa a verificação de maiúsculas/minúsculas consistentes
    "noImplicitAny": false,  // Desativa a verificação de tipos implícitos 'any'
    "noUnusedLocals": false,  // Desativa a verificação de variáveis locais não utilizadas
    "noUnusedParameters": false,  // Desativa a verificação de parâmetros não utilizados
    "declaration": false,  // Não gera arquivos de declaração (.d.ts)
    "esModuleInterop": true,  // Habilite a interoperabilidade de módulos ES
    
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
  },
  "include": [
    "src"
  ]
}